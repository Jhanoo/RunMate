<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/runningFragment">

    <fragment
        android:id="@+id/AIManagerFragment"
        android:name="com.D107.runmate.presentation.manager.AIManagerFragment"
        android:label="fragment_a_i_manager"
        tools:layout="@layout/fragment_a_i_manager" />
    <fragment
        android:id="@+id/runningFragment"
        android:name="com.D107.runmate.presentation.running.RunningFragment"
        android:label="fragment_running"
        tools:layout="@layout/fragment_running" />
    <!--그룹 페이지-->
    <fragment
        android:id="@+id/groupFragment"
        android:name="com.D107.runmate.presentation.group.view.GroupFragment"
        android:label="fragment_group"
        tools:layout="@layout/fragment_group">
        <action
            android:id="@+id/action_groupFragment_to_groupCreateFragment"
            app:destination="@id/groupCreateFragment" />
        <action
            android:id="@+id/action_groupFragment_to_groupInfoFragment"
            app:destination="@id/groupInfoFragment"
            app:launchSingleTop="true"/>
    </fragment>
    <fragment
        android:id="@+id/groupCreateFragment"
        android:name="com.D107.runmate.presentation.group.view.GroupCreateFragment"
        android:label="fragment_group_create"
        tools:layout="@layout/fragment_group_create">
        <action
            android:id="@+id/action_groupCreateFragment_to_placeSearchFragment"
            app:destination="@id/placeSearchFragment" />
    </fragment>
    <fragment
        android:id="@+id/groupInfoFragment"
        android:name="com.D107.runmate.presentation.group.view.GroupInfoFragment"
        android:label="fragment_group_info"
        tools:layout="@layout/fragment_group_info" />
    <fragment
        android:id="@+id/placeSearchFragment"
        android:name="com.D107.runmate.presentation.group.view.PlaceSearchFragment"
        android:label="fragment_place_search"
        tools:layout="@layout/fragment_place_search"/>

    <fragment
        android:id="@+id/historyFragment"
        android:name="com.D107.runmate.presentation.history.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/wearableFragment"
        android:name="com.D107.runmate.presentation.wearable.WearableFragment"
        android:label="fragment_wearable"
        tools:layout="@layout/fragment_wearable" />



</navigation>