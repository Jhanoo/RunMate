<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="26dp"
    android:paddingTop="16dp"
    tools:context=".login.Join2Fragment">

    <ImageView
        android:id="@+id/leftArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/left_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:progress="100"
        app:layout_constraintBottom_toBottomOf="@+id/leftArrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/leftArrow"
        app:layout_constraintTop_toTopOf="@+id/leftArrow" />

    <ImageView
        android:id="@+id/profileImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/join_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="50dp" />

    <ImageView
        android:id="@+id/profileUpload"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="-30dp"
        android:src="@drawable/join_profile_upload"
        app:layout_constraintBottom_toBottomOf="@+id/profileImg"
        app:layout_constraintStart_toEndOf="@+id/profileImg" />

    <TextView
        android:id="@+id/idTextView"
        style="@style/mediumTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름(닉네임)"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/profileImg"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/idEditText"
        style="@style/customEditTextFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_gray"
        android:hint="example@gamil.com"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp"
        android:textColorHint="#BBBAB9"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/idTextView"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/pwTextView"
        style="@style/mediumTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="생년월일"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/idEditText"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/pwEditText"
        style="@style/customEditTextFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_gray"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp"
        android:textColorHint="#BBBAB9"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/pwTextView"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/pwCheckTextView"
        style="@style/mediumTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="성별"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/pwEditText"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/pwCheckEditText"
        style="@style/customEditTextFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_gray"
        android:hint="확인을 위해 비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp"
        android:textColorHint="#BBBAB9"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/pwCheckTextView"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Button
        style="@style/boldTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_green"
        android:text="회원가입"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginBottom="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="26dp" />

</androidx.constraintlayout.widget.ConstraintLayout>