<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".running.view.ChartFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="차트"
        android:gravity="center"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:fontFamily="@font/pretendard_medium"
        android:letterSpacing="-0.02"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_back" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_all_arrow"
        android:padding="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_pace_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/pretendard_medium"
                android:letterSpacing="-0.02"
                android:text="페이스"
                android:textColor="@color/text"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_pace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="end"
                android:letterSpacing="-0.02"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_pace_title"
                app:layout_constraintTop_toTopOf="@+id/tv_pace_title"
                tools:text="6'55''" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_pace"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="2"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_pace"
                app:layout_constraintStart_toStartOf="@+id/tv_pace_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_pace_title" />

            <ImageView
                android:id="@+id/iv_divider_top"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_all_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chart_pace" />

            <TextView
                android:id="@+id/tv_cadence_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/pretendard_medium"
                android:letterSpacing="-0.02"
                android:text="케이던스"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_divider_top"/>

            <TextView
                android:id="@+id/tv_cadence"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="end"
                android:letterSpacing="-0.02"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_cadence_title"
                app:layout_constraintTop_toTopOf="@+id/tv_cadence_title"
                tools:text="120" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_cadence"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="2"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_pace"
                app:layout_constraintStart_toStartOf="@+id/tv_pace_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_cadence_title" />

            <ImageView
                android:id="@+id/iv_divider_medium"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_all_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chart_cadence" />

            <TextView
                android:id="@+id/tv_bpm_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/pretendard_medium"
                android:letterSpacing="-0.02"
                android:text="BPM"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_divider_medium"/>

            <TextView
                android:id="@+id/tv_bpm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="end"
                android:letterSpacing="-0.02"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_bpm_title"
                app:layout_constraintTop_toTopOf="@+id/tv_bpm_title"
                tools:text="120" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_bpm"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="2"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_pace"
                app:layout_constraintStart_toStartOf="@+id/tv_pace_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_bpm_title" />


            <ImageView
                android:id="@+id/iv_divider_bottom"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_all_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chart_bpm" />

            <TextView
                android:id="@+id/tv_altitude_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/pretendard_medium"
                android:letterSpacing="-0.02"
                android:text="고도"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_divider_bottom"/>

            <TextView
                android:id="@+id/tv_altitude"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="end"
                android:letterSpacing="-0.02"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_altitude_title"
                app:layout_constraintTop_toTopOf="@+id/tv_altitude_title"
                tools:text="120" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_altitude"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="2"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_pace"
                app:layout_constraintStart_toStartOf="@+id/tv_pace_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_altitude_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>