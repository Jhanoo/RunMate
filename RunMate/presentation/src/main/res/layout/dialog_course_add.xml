<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_running_dialog">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="코스 추가"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/ic_all_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_course_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:letterSpacing="-0.02"
        android:text="코스 이름"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <EditText
        android:id="@+id/et_course_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/bg_all_et"
        android:layout_marginTop="8dp"
        android:textColorHint="#CCCCCC"
        android:paddingStart="16dp"
        android:textColor="@color/text"
        android:textSize="16sp"
        android:letterSpacing="-0.02"
        app:layout_constraintDimensionRatio="7.5417"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_course_title" />

    <TextView
        android:id="@+id/tv_course_share_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/pretendard_medium"
        android:letterSpacing="-0.02"
        android:text="공유 여부"
        android:textColor="@color/text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/et_course_name" />

    <CheckBox
        android:id="@+id/cb_course_share"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:button="@android:color/transparent"
        android:background="@drawable/bg_all_checkbox"
        android:layout_marginStart="8dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_course_share_title"
        app:layout_constraintStart_toEndOf="@+id/tv_course_share_title"
        app:layout_constraintTop_toTopOf="@+id/tv_course_share_title" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_all_btn_long"
        android:text="추가하기"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginVertical="24dp"
        app:layout_constraintDimensionRatio="6.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_course_name"
        app:layout_constraintStart_toStartOf="@+id/et_course_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_course_share_title" />

</androidx.constraintlayout.widget.ConstraintLayout>