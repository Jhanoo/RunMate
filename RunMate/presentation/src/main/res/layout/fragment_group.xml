<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_fragment_layout"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/img_sad_emoji_group"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_sad_emoji"
        app:layout_constraintBottom_toTopOf="@+id/tv_no_group_message_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />



    <TextView
        android:id="@+id/tv_no_group_message_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="현제 가입된 그룹이 없습니다."
        android:textColor="@color/text"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_sad_emoji_group" />

    <TextView
        android:id="@+id/tv_create_join_group_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:text="그룹을 생성하거나 가입해보세요"
        android:textColor="@color/text"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_no_group_message_group"
        app:layout_constraintBottom_toTopOf="@id/gl_medium"/>

    <!-- Create Group Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_create_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        style="@style/GreenButtonStyle"
        android:text="그룹 생성"
        android:fontFamily="@font/pretendard_bold"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_join_group"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gl_medium"
        />

    <!-- Join Group Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_join_group"
        style="@style/GreenButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/color_button_secondary"
        android:fontFamily="@font/pretendard_bold"
        android:text="그룹 가입"
        android:textColor="#000000"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_create_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_create_group"
        app:layout_constraintTop_toTopOf="@+id/btn_create_group"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="390dp" />

</androidx.constraintlayout.widget.ConstraintLayout>