        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/iv_group_background"
        app:layout_constraintBottom_toBottomOf="@+id/iv_group_background"
        app:layout_constraintStart_toEndOf="@+id/tv_my_duration"
        app:layout_constraintTop_toTopOf="@+id/iv_group_background" />

