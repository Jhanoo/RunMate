    <TextView
        android:id="@+id/tv_my_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="달려라 화니"
        android:textSize="16sp"
        android:textColor="@color/text"
        android:fontFamily="@font/pretendard_medium"
        android:letterSpacing="-0.02"
        android:gravity="center"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_group_background"
        app:layout_constraintEnd_toStartOf="@+id/tv_my_duration"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/iv_group_background" />

    <TextView
        android:id="@+id/tv_my_duration"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="3:02:30"
        android:textSize="16sp"
        android:textColor="@color/text"
        android:fontFamily="@font/pretendard_medium"
        android:letterSpacing="-0.02"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/tv_my_pace"
        app:layout_constraintBottom_toBottomOf="@+id/iv_group_background"
        app:layout_constraintStart_toEndOf="@+id/tv_my_name"
        app:layout_constraintTop_toTopOf="@+id/iv_group_background" />

    <TextView
        android:id="@+id/tv_my_pace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="05'30''"
        android:textSize="16sp"
        android:textColor="@color/text"
        android:fontFamily="@font/pretendard_medium"
