<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    tools:context=".login.LoginFragment">

    <ImageView
        android:id="@+id/loginTitle"
        android:layout_width="367dp"
        android:layout_height="189dp"
        android:layout_gravity="end"
        android:layout_marginTop="90dp"
        android:src="@drawable/login_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/loginImg"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/loginImg"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="-75dp"
        android:src="@drawable/login_character"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginTitle"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="26dp"
        android:layout_marginBottom="49dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginImg"
        app:layout_constraintBottom_toTopOf="@+id/loginBtn"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/emailTextView"
            android:fontFamily="@font/pretendard_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/emailInputText"
            style="@style/customEditTextFontStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/round_white"
            android:hint="ID"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:fontFamily="@font/pretendard_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="비밀번호"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            style="@style/customEditTextFontStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/round_white"
            android:hint="PW"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginBtn"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:layout_marginBottom="169dp"
        app:cornerRadius="8dp"
        android:background="#298E60"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/joinBtn"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="회원가입"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/loginBtn"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>