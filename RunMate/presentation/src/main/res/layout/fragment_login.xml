<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    tools:context=".login.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/loginTitle"
            android:layout_width="367dp"
            android:layout_height="189dp"
            android:layout_gravity="end"
            android:src="@drawable/login_title"
            app:layout_constraintBottom_toTopOf="@+id/loginImg"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/loginImg"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_marginTop="-75dp"
            android:src="@drawable/login_character"
            app:layout_constraintTop_toBottomOf="@+id/loginTitle"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="26dp"
            app:layout_constraintTop_toBottomOf="@+id/loginImg"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:text="이메일"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/emailInputText"
                style="@style/customEditTextFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/round_white"
                android:hint="ID"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="비밀번호"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                style="@style/customEditTextFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/round_white"
                android:hint="PW"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/loginBtn"
                style="@style/DarkGreenButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="로그인" />

            <TextView
                android:id="@+id/joinBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="회원가입"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/loginBtn"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>