<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- 날짜 정보 컨테이너 -->
    <LinearLayout
        android:id="@+id/date_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6/21"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/pretendard_bold" />

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일"
            android:textSize="12sp"
            android:textColor="#FF0000"
            android:fontFamily="@font/pretendard_regular" />
    </LinearLayout>

    <!-- 마라톤 정보 컨테이너 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@id/date_wrapper"
        app:layout_constraintEnd_toStartOf="@id/iv_right_confirm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_marathon_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="춘천 호반 마라톤"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:fontFamily="@font/pretendard_medium"
            android:maxLines="1"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location_mark"
                android:contentDescription="위치" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="강원, 춘천 송암스포츠타운 종합경기장"
                android:textSize="12sp"
                android:textColor="#666666"
                android:fontFamily="@font/pretendard_regular"
                android:layout_marginStart="4dp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>

    <!-- 화살표 아이콘 -->
    <ImageView
        android:id="@+id/iv_right_confirm"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="상세보기" />

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/date_wrapper"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>