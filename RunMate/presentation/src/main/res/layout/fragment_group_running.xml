<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".running.view.RunningFragment">

    <com.kakao.vectormap.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/bg_running_record"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_running_record"
        app:layout_constraintDimensionRatio="4.7760"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="36sp"
        android:autoSizeMinTextSize="6sp"
        android:autoSizeTextType="uniform"
        android:ellipsize="none"
        android:maxLines="1"
        android:textColor="@color/text"
        android:textSize="32sp"
        android:textStyle="bold"
        android:letterSpacing="-0.02"
        android:gravity="center"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/tv_time_title"
        app:layout_constraintEnd_toStartOf="@+id/tv_pace"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/bg_running_record"
        app:layout_constraintTop_toTopOf="@+id/bg_running_record"
        tools:text="05:20" />

    <TextView
        android:id="@+id/tv_time_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="14sp"
        android:autoSizeMinTextSize="6sp"
        android:autoSizeTextType="uniform"
        android:ellipsize="none"
        android:maxLines="1"
        android:text="시간"
        android:textColor="@color/caption"
        android:textSize="14sp"
        android:textStyle="bold"
        android:letterSpacing="-0.02"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/bg_running_record"
        app:layout_constraintEnd_toEndOf="@+id/tv_time"
        app:layout_constraintStart_toStartOf="@+id/tv_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_time" />

    <TextView
        android:id="@+id/tv_pace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="36sp"
        android:autoSizeMinTextSize="6sp"
        android:autoSizeTextType="uniform"
        android:ellipsize="none"
        android:maxLines="1"
        android:textColor="@color/text"
        android:textSize="32sp"
        android:textStyle="bold"
        android:letterSpacing="-0.02"
        android:gravity="center"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/tv_pace_title"
        app:layout_constraintEnd_toStartOf="@+id/tv_distance"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_time"
        app:layout_constraintTop_toTopOf="@+id/bg_running_record"
        tools:text="06'50''" />

    <TextView
        android:id="@+id/tv_pace_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="14sp"
        android:autoSizeMinTextSize="6sp"
        android:autoSizeTextType="uniform"
        android:ellipsize="none"
        android:maxLines="1"
        android:text="현재 페이스"
        android:textColor="@color/caption"
        android:textSize="14sp"
        android:textStyle="bold"
        android:letterSpacing="-0.02"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/bg_running_record"
        app:layout_constraintEnd_toEndOf="@+id/tv_pace"
        app:layout_constraintStart_toStartOf="@+id/tv_pace"
        app:layout_constraintTop_toBottomOf="@+id/tv_pace" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="36sp"
        android:autoSizeMinTextSize="6sp"
        android:autoSizeTextType="uniform"
        android:ellipsize="none"
        android:maxLines="1"
        android:textColor="@color/text"
        android:textSize="32sp"
        android:textStyle="bold"
        android:letterSpacing="-0.02"
        android:gravity="center"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/tv_distance_title"
        app:layout_constraintEnd_toEndOf="@+id/bg_running_record"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_pace"
        app:layout_constraintTop_toTopOf="@+id/bg_running_record"
        tools:text="0.00" />

    <TextView
        android:id="@+id/tv_distance_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="14sp"
        android:autoSizeMinTextSize="6sp"
        android:autoSizeTextType="uniform"
        android:ellipsize="none"
        android:maxLines="1"
        android:text="거리(km)"
        android:textColor="@color/caption"
        android:textSize="14sp"
        android:textStyle="bold"
        android:letterSpacing="-0.02"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/bg_running_record"
        app:layout_constraintEnd_toEndOf="@+id/tv_distance"
        app:layout_constraintStart_toStartOf="@+id/tv_distance"
        app:layout_constraintTop_toBottomOf="@+id/tv_distance" />

    <ImageView
        android:id="@+id/btn_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_running_btn_start"
        app:layout_constraintBottom_toTopOf="@+id/btn_set_pace"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2063" />

    <ImageView
        android:id="@+id/btn_pause"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_running_btn_pause"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btn_set_pace"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2063" />

    <ImageView
        android:id="@+id/btn_vibrate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/ic_running_btn_vibrate_on"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/btn_start"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/btn_start"
        app:layout_constraintWidth_percent="0.1456" />

    <ImageView
        android:id="@+id/btn_sound"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/ic_running_btn_sound_on"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/btn_start"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toEndOf="@+id/btn_start"
        app:layout_constraintWidth_percent="0.1456" />

    <ImageView
        android:id="@+id/btn_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_running_btn_end"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btn_set_pace"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_restart"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2063" />

    <ImageView
        android:id="@+id/btn_restart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_running_btn_restart"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btn_set_pace"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_end"
        app:layout_constraintWidth_percent="0.2063" />

    <ImageView
        android:id="@+id/btn_set_pace"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/ic_running_btn_pace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="2.3076"
        app:layout_constraintEnd_toStartOf="@+id/btn_leave_group"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/btn_leave_group"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/ic_running_btn_leave_group"
        app:layout_constraintBottom_toBottomOf="@+id/btn_set_pace"
        app:layout_constraintDimensionRatio="2.3076"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_set_pace" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="btn_leave_group,btn_set_pace,btn_start" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_btn_running"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="btn_sound, btn_vibrate, btn_pause" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/primary"
        app:constraint_referenced_ids="bg_running_record, tv_distance, tv_distance_title, tv_pace, tv_pace_title, tv_time, tv_time_title" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_btn_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="btn_restart, btn_end" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_running_btn_finish_group"
        android:visibility="gone"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        />

</androidx.constraintlayout.widget.ConstraintLayout>