<resources>
    <!-- Custom font 적용 -->
    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="customButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="customEditTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="customRadioButtonFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="customCheckboxFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="FABCircleShape" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
        <!--        <item name="android:fontFamily">@font/pretendard_semi_bold</item>-->
        <item name="android:textColor">@color/text</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="CustomTabSelectedTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="DialogNoAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="ToolbarTitleFont" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="JoinProgressBarStyle" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:minHeight">6dp</item>
        <item name="android:maxHeight">6dp</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar</item>
    </style>

    <!-- Button 스타일   -->
    <style name="DarkGreenButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:background">@drawable/btn_dark_green</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="GreenButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:background">@drawable/btn_green</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="SecondaryButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="GrayButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:background">@drawable/btn_gray</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!--  아래 속성을 사용할 때, bold가 필요한 경우 xml에서 직접 추가  -->
    <style name="SmallGreenButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:background">@drawable/btn_small_green</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="GrayLineButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:background">@drawable/edit_text_gray_background</item>
        <item name="android:textStyle">normal</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <!--  EditText 스타일  -->
    <style name="GrayEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_gray_background</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#CCCCCC</item>
    </style>

    <style name="WhiteEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_white_background</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#CCCCCC</item>
    </style>

    <style name="CalendarHeaderTextStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <!--  TimePicker  -->
    <style name="BaseTheme.TimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="materialClockStyle">@style/AppTheme.Widget.TimePicker.Clock</item>
        <item name="chipStyle">@style/BaseTheme.Widget.Chip</item>
        <item name="materialButtonOutlinedStyle">@style/AppTheme.Widget.TimePicker.Clock.AmPmButton
        </item>
<!--        <item name="textInputStyle">@style/BaseTheme.Widget.TimePicker.TextInputLayout</item>-->
        <item name="materialTimePickerTitleStyle">@style/ToolbarTitleFont</item>
        <item name="colorSurface">@color/white</item>

    </style>
    <style name="BaseTheme.Widget.TimePicker.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/selector_timepicker_stroke</item>
        <item name="boxBackgroundColor">@color/selector_timepicker_edit_box</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="editTextStyle">@style/BaseTheme.Widget.TimePicker.TextInputEditText</item>
    </style>
    <style name="BaseTheme.Widget.TimePicker.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textAppearance">@style/TextAppearance.TimePicker.EditText</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLength">2</item>
    </style>

    <style name="TextAppearance.TimePicker.EditText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="BaseTheme.Widget.Chip" parent="Widget.MaterialComponents.TimePicker.Display">
        <item name="android:textColor">@color/selector_timepicker_text</item>
        <item name="chipBackgroundColor">@color/selector_timepicker_background</item>
        <item name="strokeColor">@color/selector_timepicker_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="AppTheme.Widget.TimePicker.Clock" parent="Widget.MaterialComponents.TimePicker.Clock">
        <item name="clockFaceBackgroundColor">@color/color_clock_background</item>
        <item name="clockHandColor">@color/primary_dark</item>
        <item name="clockNumberTextColor">@color/selector_timepicker_clock_text</item>
    </style>

    <style name="AppTheme.Widget.TimePicker.Clock.AmPmButton" parent="Widget.MaterialComponents.TimePicker.Button">
        <item name="backgroundTint">@color/selector_timepicker_background</item>
        <item name="strokeColor">@color/primary_dark</item>
        <item name="android:textColor">@color/selector_timepicker_text</item>

    </style>


</resources>
