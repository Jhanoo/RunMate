<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.runhwani.runmate.dao.MarathonDistanceDao">

    <select id="findByMarathonId"
            parameterType="java.util.UUID"
            resultType="com.runhwani.runmate.model.MarathonDistance">
        SELECT
        distance_id   AS distanceId,
        marathon_id   AS marathonId,
        distance
        FROM marathon_distances
        WHERE marathon_id = #{marathonId}
        ORDER BY distance
    </select>

</mapper>
