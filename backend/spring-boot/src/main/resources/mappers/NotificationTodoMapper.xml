<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.runhwani.runmate.dao.NotificationTodoDao">

    <resultMap id="TodoMap" type="com.runhwani.runmate.model.Todo">
        <id column="todo_id" property="todoId" javaType="java.util.UUID"/>
        <result column="curriculum_id" property="curriculumId" javaType="java.util.UUID"/>
        <result column="user_id" property="userId" javaType="java.util.UUID"/>
        <result column="content" property="content"/>
        <result column="is_done" property="isDone" javaType="java.lang.Boolean"/>
        <result column="date" property="date"/>
    </resultMap>

    <select id="findById" resultMap="TodoMap">
        SELECT *
        FROM todos
        WHERE todo_id = #{todoId}
    </select>

    <select id="findTodosByUserIdAndDate" resultMap="TodoMap">
        SELECT 
            todo_id,
            curriculum_id,
            user_id,
            content,
            COALESCE(is_done, false) as is_done,
            date
        FROM todos
        WHERE user_id = #{userId}
          AND DATE(date) = #{date}
        ORDER BY date
    </select>
    
    <select id="findAllTodosByDate" resultMap="TodoMap">
        SELECT *
        FROM todos
        WHERE DATE(date) = #{date}
        ORDER BY user_id, date
    </select>

    <insert id="insert">
        INSERT INTO todos (todo_id, curriculum_id, user_id, content, is_done, date)
        VALUES (#{todoId}, #{curriculumId}, #{userId}, #{content}, #{isDone}, #{date})
    </insert>

    <update id="updateStatus">
        UPDATE todos
        SET is_done = #{isDone}
        WHERE todo_id = #{todoId}
    </update>

    <delete id="delete">
        DELETE FROM todos
        WHERE todo_id = #{todoId}
    </delete>
</mapper> 